<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zcxy.demo.dao.BgmDao">

    <resultMap type="com.zcxy.demo.entity.Bgm" id="BgmMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="path" column="path" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BgmMap">
        select
          id, author, name, path
        from video.bgm
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BgmMap">
        select
          id, author, name, path
        from video.bgm
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BgmMap">
        select
          id, author, name, path
        from video.bgm
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="author != null and author != ''">
                and author = #{author}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="path != null and path != ''">
                and path = #{path}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into video.bgm(author, name, path, id)
        values (#{author}, #{name}, #{path}, #{id})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update video.bgm
        <set>
            <if test="author != null and author != ''">
                author = #{author},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="path != null and path != ''">
                path = #{path},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from video.bgm where id = #{id}
    </delete>

</mapper>